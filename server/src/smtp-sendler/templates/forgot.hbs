    <style>
        body {
            background: #fafafa;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            line-height: 1.5;
            color: #1a1a1a;
            margin: 0;
            padding: 0;
        }

        .footer {
            padding: 24px 32px;
            text-align: center;
            color: #64748b;
            font-size: 12px;
            border-top: 1px solid #f1f5f9;
            background-color: #f8fafc;
        }

        .footer-link {
            font-family: sans-serif;
            color: #64748b;
            text-decoration: none;
            margin: 0 8px;
            font-size: 12px;
        }

        .footer-link:hover {
            text-decoration: underline;
            color: #0ea5e9;
        }

        .animate-pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.85;
            }
        }

        .greeting {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: #0f172a;
            font-family: sans-serif;
        }

        .link-text {
            color: #94a3b8;
            background: #1e293b;
            border-color: #334155;
            font-family: sans-serif;
        }

        .link-text {
            word-break: break-all;
            font-size: 13px;
            color: #64748b;
            background-color: #f8fafc;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid #e2e8f0;
            text-align: center;
            margin: 24px 0;
        }

        .text {
            color: #334155;
            margin-bottom: 15px;
            font-size: 15px;
            font-family: sans-serif;
        }

        .container {
            display: block;
            margin: 40px auto;
            width: 480px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.05);
            border: 1px solid #eaeaea;
            overflow: hidden;
        }

        .header {
            padding: 32px 32px 24px;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
            background: linear-gradient(120deg, #f9fafb 0%, #ffffff 100%);
        }

        .logo {
            font-size: 24px;
            font-weight: 700;
            letter-spacing: -0.5px;
            background: linear-gradient(90deg, #0ea5e9 0%, #6366f1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            margin-bottom: 16px;
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            background-color: #f0f9ff;
            color: #0284c7;
            font-size: 12px;
            font-weight: 500;
            border-radius: 20px;
            border: 1px solid #bae6fd;
        }

        .content {
            padding: 32px;
        }

        .btn {
            display: block;
            padding: 14px;
            text-align: center;
            background: #0f172a;
            color: white !important;
            font-weight: 500;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.2s ease;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            margin: 32px 0;
        }

        .btn:hover {
            background: #1e293b;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        /* Стили для не-Outlook */
        .non-outlook-btn {
            display: block;
            width: 416px;
            height: 52px;
            background: #0f172a;
            border-radius: 6px;
            color: white !important;
            text-align: center;
            line-height: 52px;
            font-size: 15px;
            font-weight: 500;
            text-decoration: none;
            margin: 24px auto;
        }

        .non-outlook-badge {
            display: inline-block;
            background: #f0f9ff;
            border: 1px solid #bae6fd;
            border-radius: 14px;
            color: #0284c7;
            padding: 0 12px;
            line-height: 28px;
            font-size: 12px;
            font-weight: 500;
        }

        @media (prefers-color-scheme: dark) {
            body {
                background: #0f172a;
            }

            .container {
                background: #1e293b;
                border-color: #334155;
                box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
            }

            .header {
                background: linear-gradient(120deg, #1e293b 0%, #0f172a 100%);
                border-color: #334155;
            }

            .greeting {
                color: #f1f5f9;
            }

            .text {
                color: #cbd5e1;
            }

            .btn {
                background: #38bdf8;
            }

            .btn:hover {
                background: #0ea5e9;
            }

            .link-text {
                color: #94a3b8;
                background: #1e293b;
                border-color: #334155;
            }

            .footer {
                background: #0f172a;
                border-color: #334155;
                color: #94a3b8;
            }
        }
    </style>
</head>

